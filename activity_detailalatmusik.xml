<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".detailkatalog">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/katalog111"
        >
        <ImageView
            android:id="@+id/icon11"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@mipmap/gitar"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/md_black_1000"/>

        <TextView
            android:id="@+id/alat11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Alat          : Gitar"
            android:layout_toEndOf="@id/icon11"
            android:layout_marginTop="8dp"
            android:textColor="@color/md_black_1000"
            android:textSize="12sp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            />
        <TextView
            android:id="@+id/harga1" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga                  : Rp.15000/hari"
            android:layout_toEndOf="@id/icon11"
            android:layout_below="@+id/alat11"
            android:textColor="@color/md_black_1000"
            android:textSize="12sp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            />
        <TextView
            android:id="@+id/harga1" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis                   : Gitar Spanyol"
            android:layout_toEndOf="@id/icon11"
            android:layout_below="@+id/alat11"
            android:textColor="@color/md_black_1000"
            android:textSize="12sp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/tambahkanalat"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="65dp"
            android:text="Tambahkan kekeranjang"
            android:onClick="Makan"/>
    </LinearLayout>
</RelativeLayout>